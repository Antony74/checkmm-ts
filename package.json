{
    "name": "checkmm",
    "version": "1.1.1",
    "description": "",
    "main": "dist/checkmm.js",
    "bin": "cli.js",
    "scripts": {
        "cpp-build": "g++ cpp/checkmm.cpp -o checkmmc -O3 -funroll-loops -finline-functions -fomit-frame-pointer -Wall -pedantic",
        "cpp-build-debug": "g++ cpp/checkmm.cpp -o checkmmc -g -O0 -Wall -pedantic",
        "cpp-run": "./checkmmc set.mm",
        "cpp-sample": "concurrently './checkmmc set.mm' 'sample checkmmc 100 100 -mayDie -file profile.txt'",
        "build": "tsc",
        "lint": "eslint .",
        "metamath-test": "ts-node test/metamath-test.ts",
        "metamath-test-no-update": "ts-node test/metamath-test.ts --no-update",
        "prettier": "prettier --write .",
        "set.mm": "ts-node src/checkmm.ts set.mm",
        "get-set.mm": "curl -L https://github.com/metamath/set.mm/raw/refs/heads/develop/set.mm -O",
        "start": "ts-node src/checkmm.ts",
        "time": "npm run build && node cli.js set.mm | gnomon",
        "test": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Antony74/checkmm-ts.git"
    },
    "author": "Antony74",
    "license": "CC0-1.0",
    "bugs": {
        "url": "https://github.com/Antony74/checkmm-ts/issues"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.28.3",
        "@babel/preset-typescript": "^7.27.1",
        "@eslint/js": "^9.35.0",
        "@types/node": "^24.5.2",
        "@typescript-eslint/eslint-plugin": "^8.0.1",
        "@typescript-eslint/parser": "^8.0.1",
        "concurrently": "^9.2.1",
        "eslint": "^9.35.0",
        "globals": "^16.4.0",
        "gnomon": "^1.4.6",
        "jest": "^30.1.3",
        "prettier": "^3.6.2",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.44.0"
    },
    "prettier": {
        "semi": true,
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 4,
        "trailingComma": "all",
        "arrowParens": "avoid"
    }
}
